[ ! -d "$XDG_STATE_HOME" ] && mvp "$XDG_STATE_HOME" &>'/dev/null'
########################################################################################################################
# 6 POSITION LAST
########################################################################################################################
[ ! -d "$AUDIO/ccvst" ] && mvp "$AUDIO/ccvst" &>'/dev/null'
[ ! -d "$AUDIO/files" ] && mvp "$AUDIO/files" &>'/dev/null'
[ ! -d "$ARDOUR" ] && mvp "$ARDOUR" &>'/dev/null'
[ ! -d "$ARDOUR/plugins" ] && mvp "$ARDOUR/plugins" &>'/dev/null'
