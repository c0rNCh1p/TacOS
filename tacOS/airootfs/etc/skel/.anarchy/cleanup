[ ! -d "$AUDIO" ] && mvp "$AUDIO" &>'/dev/null'
[ ! -d "$GTK2_RC_FILES" ] && mvp "$GTK2_RC_FILES" &>'/dev/null'
[ -d "$HOME/.bin" ] && mv "$HOME/.bin" "$LOCAL/bin"
