[ ! -d "$BLENDER" ] && mvp "$BLENDER" &>'/dev/null'
[ ! -d "$BLENDER/plugins" ] && mvp "$BLENDER/plugins" &>'/dev/null'
[ ! -d "$BLENDER/projects" ] && mvp "$BLENDER/projects" &>'/dev/null'
[ ! -d "$BLENDER/templates" ] && mvp "$BLENDER/templates" &>'/dev/null'
